@model OrangeBricks.Web.Controllers.Property.ViewModels.BookAppointmentViewModel

@{
    ViewBag.Title = "Book Viewing Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Viewing Appointment</h2>

<p>When would you like to see the @Model.PropertyType on @Model.StreetName?</p>

@using (Html.BeginForm("BookAppointment", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.RequestedFor, "Desired date", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.PropertyId)
            @Html.EditorFor(m => m.RequestedFor, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RequestedFor)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Book Appointment" />
        </div>
    </div>
}